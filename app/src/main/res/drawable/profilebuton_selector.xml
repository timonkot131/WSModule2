<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:state_last="false">
        <layer-list>
            <item android:drawable="@drawable/profilebutton_style"/>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="#2196F3"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false" android:state_last="false" android:drawable="@drawable/profilebutton_style"/>

    <item android:state_last="true"  android:state_pressed="false">
      <shape android:shape="rectangle">
          <solid android:color="#FFFFFF"/>
      </shape>
    </item>

    <item android:state_pressed="true" android:state_last="true" >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
</selector>