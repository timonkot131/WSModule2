<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FillTransactActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/back_topmenu"/>

        <LinearLayout
            android:id="@+id/filltransact_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_topmenu"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profilebutton_style">
                <TextView
                    android:id="@+id/payer_title"
                    android:text="Карта отправителя"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/payer_cardnum"
                    android:layout_below="@id/payer_title"
                    android:text="3333****3333"
                    android:textColor="#474747"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"/>
                <TextView
                    android:id="@+id/payer_summ"
                    android:text="333 рублей"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#474747"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/profilebutton_style">
                <TextView
                    android:id="@+id/getter_title"
                    android:text="Карта получателя"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/getter_cardnum"
                    android:layout_below="@id/getter_title"
                    android:text="3333****3333"
                    android:textColor="#474747"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"/>
                <TextView
                    android:id="@+id/getter_summ"
                    android:text="333 рублей"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="#474747"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22dp"/>


            </RelativeLayout>


        </LinearLayout>

        <EditText
            android:id="@+id/filltransact_summ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingRight="60dp"
            android:textSize="28dp"
            android:paddingLeft="15dp"
            android:text="Введите сумму"
            android:background="@drawable/profilebutton_style"
            android:inputType="number"/>
        <TextView
            android:id="@+id/filltransact_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:paddingTop="12dp"
            android:paddingBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp"
            android:text="Оплатить"
            android:textSize="35dp"
            android:background="@color/colorPurple"/>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>