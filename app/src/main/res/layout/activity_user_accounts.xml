<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/userAccount_viewpager"
            android:layout_width="match_parent"
            android:layout_height="272dp"/>
        <Button
            android:id="@+id/useraccount_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textAlignment="textStart"
            android:textColor="#0775A7"
            android:text="История операций"
            android:background="@drawable/profilebuton_selector"/>
        <Button
            android:id="@+id/useraccount_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textAlignment="textStart"
            android:textColor="#0775A7"
            android:text="Переименовать"
            android:background="@drawable/profilebuton_selector"/>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>