<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/card_viewpager"
            android:layout_width="match_parent"
            android:layout_height="272dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPurple">
            <Button
                android:textColor="#FFFFFF"
                android:text="Пополнить"
                android:id="@+id/card_fill_button"
                android:background="@drawable/carded_style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="50dp"/>
            <Button
                android:textColor="#FFFFFF"
                android:text="Перевести"
                android:id="@+id/card_transit_button"
                android:background="@drawable/carded_style"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/cards_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAlignment="textStart"
                android:textColor="#0775A7"
                android:text="История операций"
                android:background="@drawable/profilebuton_selector"/>
            <Button
                android:id="@+id/cards_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAlignment="textStart"
                android:textColor="#0775A7"
                android:text="Заблокировать"
                android:background="@drawable/profilebuton_selector"/>
            <Button
                android:id="@+id/cards_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAlignment="textStart"
                android:textColor="#0775A7"
                android:text="Переименовать"
                android:background="@drawable/profilebuton_selector"/>

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>