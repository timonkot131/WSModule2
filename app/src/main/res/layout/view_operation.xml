<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="110dp" android:background="@drawable/profilebuton_selector">
    <TextView
        android:id="@+id/operationview_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="TextView"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/operationview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/operationview_type"
        android:text="TextView"
        android:layout_marginLeft="50dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/operationview_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/operationview_date"
        android:text="TextView"
        android:layout_marginLeft="50dp"
        android:textColor="#000000"/>


</RelativeLayout>